{
  "name": "redwoodjs-stripe",
  "version": "0.1.0-rc.6",
  "description": "A Redwood/Stripe integration made easy",
  "targets": {
    "api-cjs": {
      "source": "api/src/index.js",
      "distDir": "api/dist/api-cjs",
      "isLibrary": true,
      "context": "node",
      "outputFormat": "commonjs"
    },
    "web-cjs": {
      "source": "web/src/index.js",
      "distDir": "web/dist/web-cjs",
      "isLibrary": true,
      "context": "browser",
      "outputFormat": "commonjs",
      "includeNodeModules": [
        "@stripe/stripe-js"
      ]
    }
  },
  "browserslist": {
    "development": [
      "last 1 version"
    ]
  },
  "scripts": {
    "publish": "lerna publish --access=public",
    "dev": "yarn dev:watch",
    "dev:watch": "yarn chokidar 'src/**/*' -c 'yarn dev:build \"$1\"'",
    "dev:build": "yarn build && yalc push && (cd \"$1\" && yalc add redwoodjs-stripe);",
    "build": "parcel build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisvdm/redwoodjs-stripe.git"
  },
  "keywords": [
    "redwood",
    "stripe"
  ],
  "author": "Chrisvdm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chrisvdm/redwoodjs-stripe/issues"
  },
  "homepage": "https://github.com/chrisvdm/redwoodjs-stripe#readme",
  "devDependencies": {
    "@apollo/client": "^3.6.9",
    "@babel/runtime-corejs3": "^7.17.9",
    "@parcel/config-default": "^2.8.2",
    "@parcel/core": "^2.8.3",
    "@parcel/transformer-graphql": "latest",
    "chokidar-cli": "^3.0.0",
    "cli-testing-library": "^1.0.4",
    "core-js": "^3.22.5",
    "dir-tree": "^1.0.1",
    "graphql-tag": "2.x",
    "jest": "^28.1.1",
    "lerna": "^6.5.1",
    "parcel": "^2.8.2",
    "yalc": "^1.0.0-pre.53"
  },
  "dependencies": {
    "@stripe/stripe-js": "1.29.0",
    "envfile": "^6.17.0",
    "fs-extra": "^10.1.0",
    "listr": "^0.14.3",
    "prompts": "^2.4.2",
    "stripe": "^11.9.1",
    "tmp-promise": "^3.0.3",
    "yargs": "^17.5.1"
  },
  "peerDependencies": {
    "@apollo/client": "3.x",
    "@redwoodjs/core": "4.x",
    "@redwoodjs/web": "4.x",
    "graphql-tag": "2.x",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "workspaces": [
    "api",
    "web",
    "cli"
  ]
}
