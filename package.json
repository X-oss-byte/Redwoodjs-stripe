{
  "name": "redwoodjs-stripe",
  "private": true,
  "description": "A Redwood/Stripe integration made easy",
  "scripts": {
    "publish": "lerna publish",
    "clean": "rm -rf ./{cli,api,web}/dist",
    "build:cli": "esbuild --platform=node --format=cjs --outdir=./cli/dist/ $(find cli/src -name '*.js' -and -not -name '*.test.js')",
    "build:web": "esbuild --platform=browser --outdir=./web/dist/ --loader:.js=jsx $(find web/src -name '*.js' -or -name '*.css' -and -not -name '*.test.js')",
    "build:api": "esbuild --platform=node --format=cjs --outdir=./api/dist/ $(find api/src -name '*.js' -and -not -name '*.test.js')",
    "build": "yarn clean && yarn build:api && yarn build:web && yarn build:cli",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisvdm/redwoodjs-stripe.git"
  },
  "keywords": [
    "redwood",
    "stripe"
  ],
  "author": "Chrisvdm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chrisvdm/redwoodjs-stripe/issues"
  },
  "homepage": "https://github.com/chrisvdm/redwoodjs-stripe#readme",
  "devDependencies": {
    "@apollo/client": "^3.6.9",
    "@babel/runtime-corejs3": "^7.17.9",
    "chokidar-cli": "^3.0.0",
    "cli-testing-library": "^1.0.4",
    "core-js": "^3.22.5",
    "dir-tree": "^1.0.1",
    "esbuild": "^0.17.18",
    "graphql-tag": "2.x",
    "jest": "^28.1.1",
    "lerna": "^6.5.1",
    "yalc": "^1.0.0-pre.53"
  },
  "dependencies": {
    "@stripe/stripe-js": "1.29.0",
    "envfile": "^6.17.0",
    "fs-extra": "^10.1.0",
    "listr": "^0.14.3",
    "prompts": "^2.4.2",
    "stripe": "^11.9.1",
    "tmp-promise": "^3.0.3",
    "yargs": "^17.5.1"
  },
  "peerDependencies": {
    "@apollo/client": "3.x",
    "graphql-tag": "2.x",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "workspaces": [
    "api",
    "web",
    "cli"
  ]
}
